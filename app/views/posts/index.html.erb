<% content_for :feeds do %>
  <link rel="alternate" type="application/rss+xml" title="<%= get_title %> - RSS" href="<%= rss_blog_posts_url(blog_id: @blog, format: "xml") %>" />
<% end %>
<%= render partial: "shared/new_post" %>
<% if @posts.blank? %>
  <%= render partial: "post", locals: { post: Post.no_posts(@blog, User.find_by_email("jasonrush@jasonrush.com")), comments: false } %>
<% else %>
  <% @posts.each do |post| %>
    <%= render partial: "post", locals: { post: post, comments: false } %>
  <% end %>
<% end %>